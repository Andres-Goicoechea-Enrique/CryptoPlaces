<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellowAccent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/NombreVenue_TV"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Nombre punto geografico"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>

                <ToggleButton
                    android:id="@+id/toggleBTN_id"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textOn=""
                    android:textOff=""
                    android:layout_gravity="center"
                    android:background="@drawable/toogle_selector_fav"
                    android:onClick="ToogleBTNClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <!-- Venue Details -->
                <LinearLayout
                    android:id="@+id/area_venue_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentTop="true">

                    <LinearLayout
                        android:id="@+id/area_categoriaVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/hint_categoriaVenue"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/id_categoriaVenueTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Info detalle"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/area_paisVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/hint_paisVenue"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/id_paisVenueTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Info detalle"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/area_creacionVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/hint_dateCreationVenue"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/id_creacionTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Info detalle"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/area_actualizacionVenue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:text="@string/hint_dateUpdateVenue"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:gravity="left"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/id_actualizacionTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:text="Info detalle"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            />
                    </LinearLayout>


                </LinearLayout>

                <!-- Venue Actions -->
                <LinearLayout
                    android:id="@+id/bottom_bar1"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/border">

                    <ImageButton
                        android:id="@+id/boton_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/purpleAccent"
                        app:srcCompat="@drawable/ic_baseline_share_24"
                        android:onClick="shareBTN"/>
                    <ImageButton
                        android:id="@+id/boton_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/blueAccent"
                        app:srcCompat="@drawable/ic_baseline_call_24"
                        android:onClick="llamarBTN"/>
                    <ImageButton
                        android:id="@+id/boton_route"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/ligthRedAccent"
                        app:srcCompat="@drawable/ic_baseline_directions_24"
                        android:onClick="routeBTN"/>

                </LinearLayout>
                <!-- Bottom Bar -->
                <LinearLayout
                    android:id="@+id/sdasa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/border"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/boton_cerrar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/redAccent"
                        android:textColor="@color/black"
                        android:text="@string/BTN_close"
                        /><!--android:onClick="cerrarDialogFragment"-->
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>