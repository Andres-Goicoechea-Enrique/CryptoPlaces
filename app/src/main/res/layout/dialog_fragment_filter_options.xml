<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialogFragmentFilterOptions">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ligthGreyAccent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:text="@string/title_df_filter"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/border"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/check_0_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/checkbox_text_all"
                    android:background="@drawable/border"
                    android:textAlignment="center"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="400dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/border"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/check_1_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_2_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_3_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_4_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_5_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_6_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_7_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_8_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_9_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_10_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_11_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_12_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_13_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_14_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_15_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>
                        <CheckBox
                            android:id="@+id/check_16_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="OPCION X"
                            android:background="@drawable/border"
                            android:textAlignment="textStart"/>

                    </LinearLayout>

                </ScrollView>


            </LinearLayout>

            <!-- APLICAR FILTRO DF -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_apply_filter_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/greenAccent"
                    android:text="@string/BTN_apply_filter"
                    android:textColor="@color/black"
                    android:onClick="aplicarFiltroBTN"/>
            </LinearLayout>

            <!-- CANCELAR FILTRO DF -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/boton_cancel_apply_filter_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/redAccent"
                    android:text="@string/BTN_cancel_apply_filter"
                    android:textColor="@color/black"
                    android:onClick="aplicarFiltroBTN"/>
            </LinearLayout>



        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>